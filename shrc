#
# .shrc
#

source ~/.dotfiles/utils.sh


# OSX stuff
if on_osx; then
    safe_source ~/.shrc_osx
else
    safe_source ~/.shrc_nix
fi

# Private stuff
safe_source ~/.shrc_priv

# Github CLI
if has_cmd hub; then
    alias git=hub
fi

# Fasd (autojump)
if has_cmd fasd; then
    eval "$(fasd --init auto)"
    alias j='fasd_cd -id'
fi
